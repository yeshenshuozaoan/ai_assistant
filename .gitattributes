# 配置行尾处理
* text=auto

# 特定文件类型的行尾处理
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.vue text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# 二进制文件
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.bmp binary
*.ico binary
*.svg binary
*.pdf binary
*.zip binary
*.rar binary
*.7z binary
*.exe binary
*.dll binary
*.lib binary
*.so binary
*.dylib binary

# 配置文件
*.properties text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# 脚本文件
*.sh text eol=lf
*.bash text eol=lf
